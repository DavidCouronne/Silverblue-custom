[Unit]
Description=Rclone mount for Synology NAS
After=network-online.target

[Service]
Type=notify
ExecStartPre=/usr/bin/mkdir -p %h/SynologyDrive
ExecStart=/usr/bin/rclone mount synology:chemin/vers/dossier %h/SynologyDrive \
  --vfs-cache-mode full \
  --vfs-cache-max-size 50G \
  --vfs-cache-max-age 168h \
  --vfs-write-back 5s \
  --buffer-size 256M
ExecStop=/usr/bin/fusermount -u %h/SynologyDrive
Restart=on-failure
RestartSec=5

[Install]
WantedBy=default.target